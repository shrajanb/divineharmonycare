@model InvoiceSearchModel
@{
    ViewData["Title"] = "Search Invoices";
}

<section class="page-hero">
    <div class="container text-center">
        <h1 class="script-font">Search Invoices</h1>
        <p class="lead">Find invoices by client name, invoice number, or ID.</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <form method="get" class="d-flex gap-2">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text dhc-input-icon"><i class="fas fa-search"></i></span>
                        <input type="text" name="q" value="@Model?.SearchTerm" class="form-control" placeholder="Search by client name, invoice #, or ID..." />
                    </div>
                    <button type="submit" class="btn btn-gold">Search</button>
                </form>
            </div>
        </div>

        @if (Model?.Results.Any() == true)
        {
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <p class="text-muted mb-3">Found <strong>@Model.Results.Count</strong> invoice(s)</p>
                    <div class="table-responsive">
                        <table class="table dhc-table">
                            <thead>
                                <tr>
                                    <th>Invoice #</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>Due Date</th>
                                    <th class="text-end">Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inv in Model.Results)
                                {
                                    <tr>
                                        <td><code>@inv.InvoiceNumber</code></td>
                                        <td><strong>@inv.ClientName</strong></td>
                                        <td>@inv.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                        <td>@inv.DueDate.ToString("yyyy-MM-dd")</td>
                                        <td class="text-end fw-bold">$@inv.TotalDue.ToString("0.00")</td>
                                        <td>
                                            <a asp-action="View_" asp-route-id="@inv.Id" class="btn btn-sm btn-outline-purple">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model?.SearchTerm))
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <p class="text-muted">No invoices found matching "<strong>@Model.SearchTerm</strong>"</p>
            </div>
        }
        else if (Model?.Results.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                <p class="text-muted">No invoices yet. <a asp-action="Create">Create the first one</a>.</p>
            </div>
        }
    </div>
</section>
