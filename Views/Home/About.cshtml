@{
    ViewData["Title"] = "About Us";
}

<!-- About Hero -->
<section class="page-hero">
    <div class="container text-center">
        <h1 class="script-font">About Divine Harmony Care</h1>
        <p class="lead">Where Compassion Meets Care</p>
    </div>
</section>

<!-- Philosophy -->
<section class="py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-7">
                <h2 class="section-title script-font">Our Philosophy</h2>
                <p class="lead">Welcome to Divine Harmony Care!</p>
                <p>We are thrilled to have the opportunity to support you. Our goal is to provide reliable, high-quality caretaking services tailored specifically to your needs, ensuring your home remains a comfortable, secure, and safe sanctuary.</p>
                <p>We understand that bringing a new person into your home requires trust, and we are committed to earning yours through professionalism, empathy, and consistent care.</p>
            </div>
            <div class="col-lg-5 text-center">
                <div class="about-decorative-box">
                    <i class="fas fa-spa fa-4x mb-3 text-gold"></i>
                    <h3 class="script-font">Dignity, Safety &amp; Compassion</h3>
                    <p>At Divine Harmony Care, we believe every individual deserves to age and live with dignity.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Core Services -->
<section class="py-5 bg-light-purple">
    <div class="container">
        <h2 class="section-title script-font text-center mb-5">Our Core Services</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="about-service-card">
                    <div class="about-service-icon"><i class="fas fa-hand-holding-heart"></i></div>
                    <h5>Personal Care</h5>
                    <p>Assistance with bathing, dressing, grooming, and toileting.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="about-service-card">
                    <div class="about-service-icon"><i class="fas fa-walking"></i></div>
                    <h5>Mobility Support</h5>
                    <p>Transferring to/from beds or chairs, walking assistance, and wheelchair management.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="about-service-card">
                    <div class="about-service-icon"><i class="fas fa-broom"></i></div>
                    <h5>Household Support</h5>
                    <p>Light housekeeping, laundry, meal preparation, and changing linens.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="about-service-card">
                    <div class="about-service-icon"><i class="fas fa-comments"></i></div>
                    <h5>Companionship</h5>
                    <p>Engaging in conversation, playing games, and providing emotional support.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="about-service-card">
                    <div class="about-service-icon"><i class="fas fa-shield-alt"></i></div>
                    <h5>Logistics &amp; Safety</h5>
                    <p>Medication reminders, transportation to appointments, and safety checks.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="about-service-card">
                    <div class="about-service-icon"><i class="fas fa-brain"></i></div>
                    <h5>Specialized Care</h5>
                    <p>Dementia/Alzheimer's care, fall prevention, and 24-hour supervision when needed.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- The Caretaking Process -->
<section class="py-5">
    <div class="container">
        <h2 class="section-title script-font text-center mb-5">The Caretaking Process</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="process-card">
                    <div class="process-number">1</div>
                    <h5>Initial Consultation</h5>
                    <p>A free assessment to discuss needs, preferences, and home environment.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="process-card">
                    <div class="process-number">2</div>
                    <h5>Custom Care Plan</h5>
                    <p>We develop a personalized plan tailored to the client's lifestyle.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="process-card">
                    <div class="process-number">3</div>
                    <h5>Caretaker Matching</h5>
                    <p>Pairing the client with a caretaker based on skills and personality compatibility.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="process-card">
                    <div class="process-number">4</div>
                    <h5>Service Begins</h5>
                    <p>The care plan begins, with regular check-ins from management.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Safety & Quality -->
<section class="py-5 bg-light-purple">
    <div class="container">
        <h2 class="section-title script-font text-center mb-5">Safety &amp; Quality Assurance</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="safety-card">
                    <i class="fas fa-user-shield fa-2x mb-3 text-gold"></i>
                    <h5>Background Checks</h5>
                    <p>All caretakers undergo rigorous criminal background checks and reference checks.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="safety-card">
                    <i class="fas fa-graduation-cap fa-2x mb-3 text-gold"></i>
                    <h5>Professional Training</h5>
                    <p>Staff are trained in emergency response, infection control, and specialized care techniques (e.g., dementia care).</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="safety-card">
                    <i class="fas fa-file-shield fa-2x mb-3 text-gold"></i>
                    <h5>Insured &amp; Bonded</h5>
                    <p>Fully covered for liability and property protection for your peace of mind.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ -->
<section class="py-5">
    <div class="container">
        <h2 class="section-title script-font text-center mb-5">Frequently Asked Questions</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion dhc-accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                What happens if my regular caretaker is sick?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                We have a dedicated backup team to ensure there is no disruption in care. You will always have a qualified caretaker available.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                How are billing and payments handled?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                We invoice monthly and accept checks, credit cards, e-transfers, or bank transfers. Detailed invoices are provided for all services rendered.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                How do I get started with Divine Harmony Care?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Simply fill out our <a asp-controller="Intake" asp-action="Form">Patient Intake Form</a> or call us at (587) 710-9284 for a free consultation. We'll discuss your needs and create a personalized care plan.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                Are your caretakers trained for specialized conditions?
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Yes, our staff are trained in dementia care, Alzheimer's care, fall prevention, and other specialized care techniques to provide the best possible support.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="script-font text-white mb-3">Join Our Family of Clients</h2>
        <p class="text-white-50 mb-4">Experience the difference that compassionate, professional care can make.</p>
        <a asp-controller="Intake" asp-action="Form" class="btn btn-gold btn-lg me-3">
            <i class="fas fa-file-medical me-2"></i>Patient Intake Form
        </a>
        <a href="tel:5877109284" class="btn btn-outline-light btn-lg">
            <i class="fas fa-phone me-2"></i>Call (587) 710-9284
        </a>
    </div>
</section>
